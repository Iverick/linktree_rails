<div class="container my-3">
  <div class="row">
    <div class="col-3"></div>
    <div class="col-6">
      <h1 class="text-center">Link Manager</h1>
      <% current_user.links.each do |link| %>
        <div class="row">
          <div class="col-10">
            <%= simple_form_for(link, url: update_link_url(link)) do |f| %>
              <div class="mb-4">
                <%= f.input :title, placeholder: "Title", label: false, class: "form-control" %>
                <%= f.input :url, placeholder: "URL", label: false, class: "form-control" %>
                <%= f.submit "Update Link", class: "btn btn-primary me-auto" %>
              </div>
            <% end %>
          </div>
          <div class="col-2 text-end">
            <%= button_to destroy_link_path(link.id), method: :delete, class: "btn btn-danger" do %>
              <i class="bi bi-trash3-fill"></i>
            <% end %>
          </div>
        </div>
      <% end %>

      <%= button_to "Add Link", create_link_path, class: "btn btn-lg btn-success w-100" %>
    </div>
    <div class="col-3"></div>
  </div>
</div>
